@model EjerciciosProgramacion.Models.EventCalendarViewModel
@{
    ViewData["Title"] = "Calendario de eventos";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="h3 mb-0">Calendario de eventos</h1>
            <p class="text-muted mb-0">Programación y listado en C#.</p>
        </div>
        <a asp-controller="Home" asp-action="Index" class="btn btn-link">Volver al índice</a>
    </div>

    <div class="row g-4">
        <div class="col-12 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="EventCalendar" method="post" class="vstack gap-3">
                        <div class="form-group">
                            <label asp-for="NewEvent.Title" class="form-label">Título</label>
                            <input asp-for="NewEvent.Title" class="form-control" />
                            <span asp-validation-for="NewEvent.Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NewEvent.Date" class="form-label">Fecha</label>
                            <input asp-for="NewEvent.Date" class="form-control" type="date" />
                        </div>
                        <div class="form-group">
                            <label asp-for="NewEvent.Location" class="form-label">Ubicación</label>
                            <input asp-for="NewEvent.Location" class="form-control" />
                        </div>
                        <button class="btn btn-primary" type="submit">Agregar evento</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-7">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Próximos eventos</h5>
                    @if (!Model.Events.Any())
                    {
                        <p class="text-muted">Aún no hay eventos.</p>
                    }
                    else
                    {
                        <div class="list-group">
                            @foreach (var ev in Model.Events)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1">@ev.Title</h6>
                                        <small class="text-muted">@ev.Date.ToShortDateString() @if (!string.IsNullOrWhiteSpace(ev.Location)) { @(" · " + ev.Location) }</small>
                                    </div>
                                    <form asp-action="DeleteEvent" method="post">
                                        <input type="hidden" name="id" value="@ev.Id" />
                                        <button class="btn btn-sm btn-outline-danger" type="submit">Eliminar</button>
                                    </form>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
