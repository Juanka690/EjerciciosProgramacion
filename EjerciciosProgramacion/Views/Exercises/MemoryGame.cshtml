@model EjerciciosProgramacion.Models.MemoryGameState
@{
    ViewData["Title"] = "Juego de memoria";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="h3 mb-0">Juego de memoria</h1>
            <p class="text-muted mb-0">Sin JavaScript: el servidor valida cada jugada.</p>
        </div>
        <a asp-controller="Home" asp-action="Index" class="btn btn-link">Volver al Ã­ndice</a>
    </div>

    <div class="card shadow-sm mb-3">
        <div class="card-body">
            <p class="mb-1">Selecciona dos posiciones (1-@Model.Cards.Count) para intentar descubrir un par.</p>
            <p class="text-muted mb-3">Movimientos realizados: @Model.Moves</p>
            <div class="row g-2 mb-3">
                <form asp-action="PlayMemoryGame" method="post" class="col-12 col-md-8">
                    <div class="row g-2">
                        <div class="col-12 col-md-6">
                            <label class="form-label">Primera carta</label>
                            <input type="number" name="firstChoice" class="form-control" min="1" max="@Model.Cards.Count" required />
                        </div>
                        <div class="col-12 col-md-6">
                            <label class="form-label">Segunda carta</label>
                            <input type="number" name="secondChoice" class="form-control" min="1" max="@Model.Cards.Count" required />
                        </div>
                        <div class="col-12">
                            <button class="btn btn-primary w-100" type="submit">Probar</button>
                        </div>
                    </div>
                </form>
                <div class="col-12 col-md-4 d-flex align-items-end">
                    <form asp-action="ResetMemoryGame" method="post" class="w-100">
                        <button class="btn btn-outline-secondary w-100" type="submit">Reiniciar</button>
                    </form>
                </div>
            </div>
            @if (Model.Messages.Any())
            {
                <div class="alert alert-info">
                    @foreach (var message in Model.Messages.TakeLast(3))
                    {
                        <div>@message</div>
                    }
                </div>
            }
            <div class="row g-2">
                @foreach (var card in Model.Cards)
                {
                    <div class="col-3">
                        <div class="border rounded text-center py-3 @(card.Matched ? "bg-success text-white" : card.Revealed ? "bg-light" : "bg-white")">
                            <div class="fw-bold">@card.Position</div>
                            <div>@(card.Revealed || card.Matched ? card.Value : "?")</div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
