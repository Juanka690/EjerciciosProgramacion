@model EjerciciosProgramacion.Models.PasswordGeneratorModel
@{
    ViewData["Title"] = "Generador de contraseñas";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="h3 mb-0">Generador de contraseñas</h1>
            <p class="text-muted mb-0">Generación realizada con lógica en C#.</p>
        </div>
        <a asp-controller="Home" asp-action="Index" class="btn btn-link">Volver al índice</a>
    </div>

    <div class="row g-4">
        <div class="col-12 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="PasswordGenerator" method="post" class="vstack gap-3">
                        <div class="form-group">
                            <label asp-for="Length" class="form-label">Longitud</label>
                            <input asp-for="Length" class="form-control" />
                            <span asp-validation-for="Length" class="text-danger"></span>
                        </div>
                        <div class="form-check">
                            <input asp-for="IncludeUppercase" class="form-check-input" />
                            <label asp-for="IncludeUppercase" class="form-check-label">Mayúsculas</label>
                        </div>
                        <div class="form-check">
                            <input asp-for="IncludeNumbers" class="form-check-input" />
                            <label asp-for="IncludeNumbers" class="form-check-label">Números</label>
                        </div>
                        <div class="form-check mb-2">
                            <input asp-for="IncludeSymbols" class="form-check-input" />
                            <label asp-for="IncludeSymbols" class="form-check-label">Símbolos</label>
                        </div>
                        <button type="submit" class="btn btn-primary">Generar</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-7">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Resultado</h5>
                    @if (string.IsNullOrWhiteSpace(Model.GeneratedPassword))
                    {
                        <p class="text-muted">Genera tu primera contraseña.</p>
                    }
                    else
                    {
                        <div class="alert alert-success">@Model.GeneratedPassword</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
